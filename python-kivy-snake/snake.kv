<Button>
    font_size: 32
    backgrount_normal: ""
    background_color: (0,1,0)
    size: 110, 0


<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10
        Label:
            text: "Kivy Snake Game"
            font_size: 64
    
        Button
            id: Play
            pos: (100,100)
            text: "Play"

        Button
            id: About
            pos: (100,0)
            text: "About"


<Fruit>:
    canvas:
        Color:
            rgb: (0,1,0)
        Rectangle:
            pos: self.pos
            size: self.size

<SnakeHead>:
    canvas:
        Color:
            rgb: (1,0,0)
        Rectangle:
            pos: self.pos
            size: self.size

<SnakeTail>:
    canvas:
        Color:
            rgba: (1,0,0,.80)
        Rectangle:
            pos: self.pos
            size: self.size

<SnakeGame>:
    head: snake_head
    fruit: snake_fruit

    SnakeHead:
        id: snake_head
        size: root.player_size - 2,root.player_size - 2
    Fruit:
        id: snake_fruit
        size: root.player_size - 2, root.player_size - 2
    Label:
        size: root.player_size, root.player_size
        pos: root.size[0] / 10, 9 * root.size[1] / 10
        text: str(root.score)